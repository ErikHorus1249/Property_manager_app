<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome_layout">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome_key"
        android:layout_width="320dp"
        android:padding="0dp"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/welcome_key"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <ImageView
        android:id="@+id/welcome_elipse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/welcome_elipse_1"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/welcome_elipse_2"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="490dp" />


<!--    <ImageView-->
<!--        android:id="@+id/art_welcome"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="164dp"-->
<!--        app:srcCompat="@drawable/welcome_ill"-->
<!--        tools:layout_editor_absoluteX="71dp"-->
<!--        tools:layout_editor_absoluteY="166dp" />-->

    <ImageView
        android:id="@+id/welcome_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        app:srcCompat="@drawable/welcome_heading" />

    <ImageView
        android:layout_below="@id/welcome_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/welcome_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/welcome_slogan" />

    <ImageButton
        android:id="@+id/button_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@null"
        app:srcCompat="@drawable/welcome_button" />


</RelativeLayout>